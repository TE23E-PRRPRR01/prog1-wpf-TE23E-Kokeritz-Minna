<Window x:Class="AritmetikApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AritmetikApp"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    MinHeight="200" MinWidth="130"
    SizeToContent="WidthAndHeight"
    Background="#DDD">
    <StackPanel Margin="10" Background="#EEE"> 
        <Label FontSize="30" FontWeight="Bold">Artimektik</Label>

        <Label FontSize="20" FontWeight="Bold">Tal 1:</Label>
        <TextBox Name="txbTal1" Width="200"></TextBox>

        <Label FontSize="20" FontWeight="Bold">Operator (+,-,*,/):</Label>
        <TextBox Name="txbOperator" Width="200"></TextBox>

        <Label FontSize="20" FontWeight="Bold">Tal 2:</Label>
        <TextBox Name="txbTal2" Width="200"></TextBox>

        <Button Click="KlickaRäkna" Width="200">Beräkna</Button>
        <Label Name="lblResultat" FontSize="15"></Label>
    </StackPanel>
</Window>