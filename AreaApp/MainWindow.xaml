<Window x:Class="AreaApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AreaApp"
    mc:Ignorable="d"
    Title="AreUtröknare" Height="450" Width="800"
    MinWidth="100" MinHeight="200"
    SizeToContent="WidthAndHeight">
    <StackPanel Margin="15">
        <Label FontWeight="Bold" FontSize="12">Räkna ut area på fyrkant</Label>

        <Label>Ange Bredd</Label>
        <TextBox Name="txbBredd"></TextBox>

        <Label>Ange Höjd</Label>
        <TextBox Name="txbHöjd"></TextBox>

        <Button Click="KlickaRäkna"> Räkna ut</Button>

        <Label>Area: </Label>
        <TextBox Name="txbArea" IsReadOnly="True"></TextBox>

        <Button Click="KlickaRensa"> Rensa Fälten </Button>
      
    </StackPanel>
</Window>