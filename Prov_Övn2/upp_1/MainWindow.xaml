<Window x:Class="upp_1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:upp_1"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    MinHeight="400"
    SizeToContent="WidthAndHeight"
    Background="#EEE"> 

    <StackPanel Margin="10">

    <Label FontSize="20">Ceasarkrypto</Label>
    <Label>Ange en text</Label>
    <TextBox Name="txbText" MinWidth="200"></TextBox>

    <Label>Ange en nyckel (1-9)</Label>
    <TextBox Name="txbNyckel" Width="200"></TextBox>

    <Button Click="KlickKryptera" Width="200">KÖR</Button>

    <Label>texten Krypterad</Label>
    <TextBox Name="txbResult" MinWidth="200" IsReadOnly="True"></TextBox>
    
    </StackPanel>    
</Window>