<Window x:Class="upp_2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:upp_2"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    SizeToContent="WidthAndHeight"
    Background="#EEE">

    <StackPanel Margin="10">
    <Label FontSize="20"> Enkel miniräkanre</Label>
    
    <StackPanel Orientation="Horizontal">
        <Label>Tal 1</Label>
        <TextBox Name="txbTal1" Width="200"></TextBox>
    </StackPanel>
    
    <StackPanel Orientation="Horizontal">
        <Label>Tal 2</Label>
        <TextBox Name="txbTal2" Width="200"></TextBox>
    </StackPanel>
    
    <DockPanel HorizontalAlignment="Center" > 
        <Button Click="KlickRäkna" Name="plus" Width="50" Margin="2"> + </Button>
        <Button Click="KlickRäkna" Name="minus" Width="50" Margin="2"> - </Button>
        <Button Click="KlickRäkna" Name="multi" Width="50" Margin="2"> * </Button>
        <Button Click="KlickRäkna" Name="divi" Width="50" Margin="2"> / </Button>
    </DockPanel>

    <Label> Resultat</Label>
    <TextBox Name="txbReusltat" Width="250" IsReadOnly="True"></TextBox>
    </StackPanel>
</Window>