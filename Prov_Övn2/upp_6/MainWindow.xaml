<Window x:Class="upp_6.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:upp_6"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    SizeToContent="WidthAndHeight"
    Background="#EEE">     

    <StackPanel Margin="10">
    <Label FontSize="30"> Löpande Medelvärde</Label>
    
    <StackPanel Orientation="Horizontal">
        <Label Width="80">Ange tal</Label> 
        <TextBox Name="txbTal" Width="200"></TextBox>
    </StackPanel>
    <Button Click="KlickAdd" Width="270">Addera</Button>

    <StackPanel Orientation="Horizontal">
        <Label Width="100">Summa</Label> 
        <TextBox Name="txbSumma" Width="150" Margin="30 0 0 0"></TextBox>
    </StackPanel>

    <StackPanel Orientation="Horizontal">
        <Label Width="100">Medelvärde</Label> 
        <TextBox Name="txbMedel" Width="150" Margin="30 0 0 0"></TextBox>
    </StackPanel>

    </StackPanel>
</Window>