<Window x:Class="Bakgrundfärg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakgrundfärg"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300"
        Background="Black"
        SizeToContent="WidthAndHeight"
        MinWidth="200"
        MinHeight="300"
        >
        <StackPanel Margin="5">
            <Label Foreground="White" FontSize="40" FontWeight="Bold" >Bagrundfest</Label>
            <Button Margin="5" Click="KlickRöd"> RÖD </Button>
            <Button Margin="5" Click="KlickGrön"> GRÖN </Button>
            <Button Margin="5" Click="KlickBlå"> BLÅ</Button>
            <Button Margin="5" Click="Klick" Name="Gul">GUL</Button>
        </StackPanel>
</Window>
