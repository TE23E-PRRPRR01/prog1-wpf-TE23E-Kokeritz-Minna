<Window x:Class="Valapp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Valapp"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    SizeToContent="WidthAndHeight">

    <StackPanel Margin="20"> 
        <Image Source="img/mello.png" Width="200" Margin="0 0 0 10"> </Image>
        <Label FontWeight="Bold" FontSize="20" HorizontalAlignment="Center">Vilken är din favoritlåt?</Label>

        <Button Name="röd" Click="KlickaRösta" Background="red" Margin="0 5 0 5" FontSize="15" Foreground="white" BorderBrush="black">Röd</Button>
        <Button Name="blå" Click="KlickaRösta" Background="blue" Margin="0 5 0 5" FontSize="15" Foreground="white" BorderBrush="black">Blå</Button>
        <Button Name="grön" Click="KlickaRösta" Background="green" Margin="0 5 0 5" FontSize="15" Foreground="white" BorderBrush="black">Grön</Button>
        <Button Name="gul" Click="KlickaRösta" Background="yellow" Margin="0 5 0 5" FontSize="15" Foreground="black" BorderBrush="black">Gul</Button>
        <Button Name="lila" Click="KlickaRösta" Background="purple" Margin="0 5 0 5" FontSize="15" Foreground="white" BorderBrush="black">Lila</Button>

        <Label>Antal röster: </Label>
        <TextBox Name="txbResultat" IsReadOnly="True"></TextBox>

        <Button Click="KlickaReset">Reset</Button>

    </StackPanel>
</Window>