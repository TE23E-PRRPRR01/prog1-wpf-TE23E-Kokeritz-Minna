<Window x:Class="SlumpaApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SlumpaApp"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    MinHeight="200"
    MinWidth="100"
    SizeToContent="WidthAndHeight"
    Background="#EEEEEE">

    <StackPanel Margin="10">
        <Label Margin="0 10 0 0 " FontWeight="Bold">Slumpa ett tal mellan 1-100</Label>
        <Label>Ange
    en maxgräns</Label>
        <TextBox Name="txbMax"></TextBox>
        <Button Click="Slumpa"
            Background="LightGreen">Slumpa!</Button>
        <TextBox Name="txbSlump" IsReadOnly="True"
            TextAlignment="Center" FontSize="40" MinHeight="40"></TextBox>
        <TextBox
            Name="txbMedelande" Background="#EEEEEE" BorderThickness="0" TextAlignment="Center"></TextBox>

        <Button
            Click="Slumpa5" Background="Green">Slumpa 5!</Button>
        <!--        <TextBox Name="txbFlera2" IsReadOnly="True" TextAlignment="Center"
        FontSize="15"></TextBox>-->        
        <ListBox Name="lxbFlera"></ListBox>


    </StackPanel>
</Window>