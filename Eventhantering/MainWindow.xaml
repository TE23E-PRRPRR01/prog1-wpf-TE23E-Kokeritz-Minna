<Window x:Class="Eventhantering.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Eventhantering"
    mc:Ignorable="d"
    Title="MainWindow" Height="400" Width="300"
    Background="#EEE"
    SizeToContent="WidthAndHeight"
    MinWidth="250"
>

    <StackPanel Margin="5">
        <Label>Ange en text</Label>
        <TextBox Name="tbxText"  Margin="5" Height="50" TextWrapping="Wrap" Width="200"></TextBox>
        <Button Click="KlickOK" Margin="5" Background="LimeGreen">OK</Button>
        <Button Click="KlickAvbryt" Margin="5" Background="red">Avbryt</Button>
        <TextBox Name="tbxResultat"  Margin="5" Height="50"></TextBox>
    </StackPanel>

</Window>